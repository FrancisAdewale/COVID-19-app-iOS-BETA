#!/usr/bin/env bash

set -euo pipefail

DATA=$(cat <<EOF
{
  "ref":"${DEPLOYMENT_SHA}",
  "required_contexts": [],
  "payload":"${DEPLOYMENT_PAYLOAD:-}",
  "environment":"${1}"
}
EOF
)

curl \
  --verbose \
  --location \
  --url https://api.github.com/repos/$GITHUB_REPOSITORY/deployments \
  --header "authorization: Bearer $DEPLOYMENT_TOKEN" \
  --header "content-type: application/json" \
  --data "$DATA"
